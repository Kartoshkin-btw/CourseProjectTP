@model IEnumerable<Course_progect_TP.Models.Route>
@{
    ViewBag.Title = "Index";
}
    <style type="text/css">
        h1 {
            font-size: 120%;
            font-family: Verdana, Arial, Helvetica, sans-serif;
            color: #333366;
        }
    </style>

<h2>Система автотранспорта</h2>
<p>
    @Html.ActionLink("Маршруты", "GetAllRoutes")
</p>
@if (User.IsInRole("Dispatcher"))
{
<p>
    @Html.ActionLink("Транспорт", "GetAllTransports")
</p>
}
@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Пользователи", "GetAllUsers")
    </p>
}

@if (User.IsInRole("Driver"))
{
    <p>
        @Html.ActionLink("Мои рейсы", "GetDriversFlights")
    </p>
}
@if (User.IsInRole("Conductor"))
{
    <p>
        @Html.ActionLink("Мои рейсы", "GetConductorsFlights")
    </p>
}




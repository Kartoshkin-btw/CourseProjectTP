@model IEnumerable<Course_progect_TP.Models.User>

@{
    ViewBag.Title = "GetAllUsers";
}

<h2>Users</h2>

<p>
    @Html.ActionLink("Create new user", "CreateUser")
</p>
<p>
    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
    {
        @Html.ActionLink("Register new user", "Register", "Account")
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id_User)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Patronymic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date_of_birth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Experience)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Login)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Id_User)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Surname)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Patronymic)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Date_of_birth)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Experience)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Role)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Login)
    </td>
    <td>
        @Html.ActionLink("Edit", "EditUser", new { id = item.Id_User }) |
        @Html.ActionLink("Delete", "DeleteUser", new { id = item.Id_User })
    </td>
</tr>
}

</table>
<p>
    @Html.ActionLink("To the main", "Index")
</p>
